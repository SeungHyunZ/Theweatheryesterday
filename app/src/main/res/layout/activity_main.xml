<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="left|center_vertical"
        android:background="@android:color/black"
        android:paddingTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/refresh"
            android:src="@drawable/update_white"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:text="UPDATE"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/timeRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:text="2020-05-02 14:00:00"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/city_contry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="서울 종로구"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <!--그래프 bof-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:gravity="left|center_vertical"
        android:background="@android:color/black"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <!--어제 그래프 bof-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/up1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>

            <!--어제내용 그래프 bof-->
            <LinearLayout
                android:id="@+id/mid1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:padding="4dp"
                android:background="@drawable/backline"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_red_light"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/max1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:gravity="top|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="****" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@android:color/holo_purple"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/d1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:text="어제D-1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_blue_dark"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/min1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:gravity="bottom|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="!!" />
                </LinearLayout>
            </LinearLayout>
            <!--어제내용 그래프 eof-->

            <LinearLayout
                android:id="@+id/down1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <!--어제 그래프 eof-->

        <!--오늘 그래프 bof-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/up2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>

            <!--오늘내용 그래프 bof-->
            <LinearLayout
                android:id="@+id/mid2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:padding="4dp"
                android:background="@drawable/backline"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_red_light"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/max2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:gravity="top|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="%%" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#0d2902"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/d2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:text="TODAY" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/sky2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="매우흐림" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_blue_dark"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/min2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:gravity="bottom|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="^^" />
                </LinearLayout>
            </LinearLayout>
            <!--오늘내용 그래프 eof-->

            <LinearLayout
                android:id="@+id/down2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <!--오늘 그래프 eof-->

        <!--내일 그래프 bof-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/up3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>

            <!--내일내용 그래프 bof-->
            <LinearLayout
                android:id="@+id/mid3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:padding="4dp"
                android:background="@drawable/backline"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_red_light"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/max3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:gravity="top|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="ºº" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/holo_orange_light"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/d3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:text="내일D+1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/sky3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="맑음" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_blue_dark"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/min3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:gravity="bottom|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="~~" />
                </LinearLayout>
            </LinearLayout>
            <!--내일내용 그래프 eof-->

            <LinearLayout
                android:id="@+id/down3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <!--내일 그래프 bof-->

        <!--모래 그래프 bof-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/up4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>

            <!--모래내용 그래프 bof-->
            <LinearLayout
                android:id="@+id/mid4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:padding="4dp"
                android:background="@drawable/backline"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_red_light"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/max4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:gravity="top|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="$$" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/holo_orange_light"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/d4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:text="모레D+2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/sky4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="비" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:background="@android:color/holo_blue_dark"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/min4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:gravity="bottom|center"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:text="TT" />
                </LinearLayout>
            </LinearLayout>
            <!--모래내용 그래프 eof-->

            <LinearLayout
                android:id="@+id/down4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@android:color/black"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <!--모래 그래프 bof-->

    </LinearLayout>
    <!--그래프 eof-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:gravity="center"
        android:background="@android:color/black">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:text="어제날씨" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:gravity="center"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
       ads:adUnitId="ca-app-pub-8558357952484896/1011470514">

    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:gravity="center"/>
</LinearLayout>